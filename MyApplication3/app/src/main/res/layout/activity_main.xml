<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="54dp"
                        android:id="@+id/oo"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="54dp"
                        android:text="New Text"
                        android:id="@+id/manufacturer"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/device"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentEnd="false" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="New Text"
                        android:id="@+id/model"
                        android:layout_alignTop="@+id/device"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="New Text"
                        android:id="@+id/brand"

                        android:layout_alignBaseline="@+id/product"
                        android:layout_alignBottom="@+id/product"
                        android:layout_alignLeft="@+id/manufacturer"
                        android:layout_alignStart="@+id/manufacturer"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="New Text"
                        android:id="@+id/build"
                        android:layout_alignBottom="@+id/manufacturer"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="New Text"
                        android:id="@+id/product"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_marginBottom="109dp"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="299dp"
                        android:layout_height="50dp"
                        android:text=""
                        android:id="@+id/userip3"
                        android:layout_alignBaseline="@+id/checkbox"
                        android:layout_alignBottom="@+id/checkbox"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="299dp"
                        android:layout_height="50dp"
                        android:text="Do you use phone for development purposes"
                        android:id="@+id/userip1"
                        android:layout_alignBaseline="@+id/checkbox"
                        android:layout_alignBottom="@+id/checkbox"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="check if yes"
                        android:id="@+id/checkbox"
                        android:layout_marginTop="92dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/userip1"
                        android:layout_toEndOf="@+id/userip1" />

                    <TextView
                        android:layout_width="299dp"
                        android:layout_height="50dp"
                        android:text="Do you always keep Bluetooth open"
                        android:id="@+id/userip2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="check if yes"
                        android:id="@+id/checkbox2"
                        android:layout_alignTop="@+id/userip2"
                        android:layout_toRightOf="@+id/userip2"
                        android:layout_toEndOf="@+id/userip2"
                        android:checked="false" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:focusableInTouchMode="false"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/text_id"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="hello_world"
                        android:layout_below="@+id/text_id1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="54dp" />

                    <TextView
                        android:id="@+id/text_id1"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="its ok"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="83dp" />

                    <TextView
                        android:id="@+id/text_id2"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="hello_world"
                        android:layout_below="@+id/text_id"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/wifi"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="wifi not supported"

                        android:layout_below="@+id/text_id1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/lockscreen"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="hello_world"
                        android:layout_below="@+id/text_id2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RatingBar
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingbar"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_margin="100dp"
                        android:stepSize="0.1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Run Evaluation"
                        android:id="@+id/button"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/tab5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/review"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:capitalize="none"
                        android:text="hello_world"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="100dp" />
                    </LinearLayout>
            </FrameLayout>

        </RelativeLayout>
    </TabHost>

</RelativeLayout>